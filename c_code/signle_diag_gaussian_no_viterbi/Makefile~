BASEDIR = /home/jitu/btp/c_code
SRCDIR = ../src
DSPLIB = ../src
OBJDIR = ../obj
BINDIR = ../bin

all:../bin/diar

../bin/diar: ../obj/preprocessing.o ../obj/VQ_Modified.o ../obj/GMM.o 
	gcc -g ../obj/preprocessing.o ../obj/VQ_Modified.o ../obj/GMM.o -o ../bin/diar -lm

../obj/GMM.o: GMM.c
	gcc -c GMM.c -o ../obj/GMM.o

../obj/VQ_Modified.o: VQ_Modified.c
	gcc -c VQ_Modified.c -o ../obj/VQ_Modified.o

../obj/preprocessing.o: preprocessing.c
	gcc -c preprocessing.c -o ../obj/preprocessing.o

clean:  ../obj/*.o ../bin/diar
	rm -rf ../bin/diar ../obj/*.o
